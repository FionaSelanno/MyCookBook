  <p id="notice"><%= notice %></p>
  <%= link_to post_path post, class: "summary" %>
  <%= image_tag(post.image.thumbnail.url, :class => "thumbnail inline") %>
  <br>
  <h4><%= post.title %></h4>
  <%= image_tag @post.image_url.to_s, class: 'bg' %>

<div class="content">
<h1><%= @post.title %></h1>
<p>
    <%= @post.content %>
</p>
   <button type="button" class="btn btn-info"><%= link_to "Edit", edit_post_path( @post) %></button>
   <button type="button" class="btn btn-info"><%= link_to "Back", post_path %></button>
   <button type="button" class="btn btn-danger"><%= link_to "Delete", post_path( @post ), method: :delete, data: { confirm: "Are you sure?" }%> </button>

</div>
