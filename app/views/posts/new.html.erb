<h1>New Post</h1>

<%= form_for @post do |f| %>

<div class="content">
  <h1><%= @post.title %></h1>
  <p>
    <%= @post.content %>
  </p>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <div class="field">
  <%= f.label :image %><br>
  <%= f.file_field :image %>
</div>
  <%= f.submit "Create" %>

</div>

<% end %>
