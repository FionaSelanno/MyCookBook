<%= form_for Post.new do |f| %>
<div>
    <div class="input-group col-xs-12">
      <div class="col-xs-8"><%= f.text_field :content, class: "form-control" %></div>
          <p class="col-xs-4">
            <%= f.file_field :image %>
          </p>
         <div class="actions">
           <%=f.submit %>
      </div>
    </div>
<% end %>
