<%= form_for Post.new do |f| %>

            <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control", placeholder: ". . ." %>

            </div>

            <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: "form-control", rows: 6  %>

            </div>

            <div class="form-group">
            <%= f.file_field :image %>
          </div>

         <div class="actions">
           <%= f.submit %>
         </div>

<% end %>
